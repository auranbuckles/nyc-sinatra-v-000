<h1>Edit Your Landmark</h1>

<form action="/landmarks/<%= @landmark.id %>" method="post">
	<input type="hidden" name="_method" value="PATCH">
	<label for="landmark_name">Name:</label>
	<br><input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">
	<br><label for="landmar_year_completed">Year Completed:</label>
	<br><input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">

	<input type="submit" value="Edit Landmark">

</form>